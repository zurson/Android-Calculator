<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:fitsSystemWindows="true"
    android:background="@color/light_pink">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:autoSizeMaxTextSize="64dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:layout_margin="10dp"
        android:text=""
        android:gravity="top|start"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/guideline_top"

        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/simple_calculator"
        android:layout_margin="10dp"
        android:gravity="top|start"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_left"
        app:layout_constraintBottom_toBottomOf="@id/guideline_top"

        android:autoSizeMaxTextSize="64dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:text="0"

        android:textColor="@color/black"

        tools:layout_editor_absoluteX="16dp" />


    <LinearLayout
        android:id="@+id/simple_calculator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_percentage"
                style="@style/button_operator"
                android:text="@string/PERCENTAGE"
                />


            <Button
                android:id="@+id/button_ac"
                style="@style/button_special"
                android:text="@string/AC"
                />


            <Button
                android:id="@+id/button_c"
                style="@style/button_special"
                android:text="@string/C" />


            <Button
                android:id="@+id/button_back"
                style="@style/button_special"
                android:text="@string/BACK" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_log"
                style="@style/button_operator"
                android:text="@string/LOG"
                />

            <Button
                android:id="@+id/button_ln"
                style="@style/button_operator"
                android:text="@string/LN"
                />

            <Button
                android:id="@+id/button_x2"
                style="@style/button_operator"
                android:text="@string/X2" />

            <Button
                android:id="@+id/button_xy"
                style="@style/button_operator"
                android:text="@string/XY" />

            <Button
                android:id="@+id/button_divide"
                style="@style/button_operator"
                android:text="@string/DIVIDE" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_sqrt"
                style="@style/button_operator"
                android:text="@string/SQRT" />

            <Button
                android:id="@+id/button_7"
                style="@style/button_number"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                style="@style/button_number"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                style="@style/button_number"
                android:text="9" />

            <Button
                android:id="@+id/button_multiply"
                style="@style/button_operator"
                android:text="@string/MULTIPLY" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_sin"
                style="@style/button_operator"
                android:text="@string/SIN"
                />

            <Button
                android:id="@+id/button_4"
                style="@style/button_number"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                style="@style/button_number"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                style="@style/button_number"
                android:text="6" />

            <Button
                android:id="@+id/button_add"
                style="@style/button_operator"
                android:text="@string/ADD" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cos"
                style="@style/button_operator"
                android:text="@string/COS" />

            <Button
                android:id="@+id/button_1"
                style="@style/button_number"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/button_number"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                style="@style/button_number"
                android:text="3" />

            <Button
                android:id="@+id/button_subtract"
                style="@style/button_operator"
                android:text="@string/SUBTRACT" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_tan"
                style="@style/button_operator"
                android:text="@string/TAN" />

            <Button
                android:id="@+id/button_sign"
                style="@style/button_number"
                android:text="@string/CHANGE_SIGN"
                />

            <Button
                android:id="@+id/button_0"
                style="@style/button_number"
                android:text="0" />

            <Button
                android:id="@+id/button_dot"
                style="@style/button_number"
                android:text="@string/DOT" />

            <Button
                android:id="@+id/button_equals"
                style="@style/button_operator"
                android:text="@string/EQUALS" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>