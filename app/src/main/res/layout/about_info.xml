<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:fitsSystemWindows="true"
    android:background="@color/light_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="70dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:autoSizeMinTextSize="30dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Informations" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:autoSizeMaxTextSize="50dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textStyle="normal"
            android:text="Application that allows to perform calculations" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="15dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textStyle="italic"
            android:text="Author:\nMateusz Jurek" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>